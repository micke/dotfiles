[commit]
  gpgsign = true
  verbose = true

[fetch]
  prune = true

[rebase]
  autosquash = true
  autoStash = true

[diff]
  colorMoved = zebra

# diff-so-fancy
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
